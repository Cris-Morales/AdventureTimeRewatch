{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["dom", "es2021"],
    "allowJs": true,
    "strict": true,
    "removeComments": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": false
  },
  "include": ["src/**/*.ts", "server/**/*.ts", "global.d.ts"]
}
